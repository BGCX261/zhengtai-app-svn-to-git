<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01" android:layout_width="fill_parent"  android:orientation="vertical"
    android:layout_height="fill_parent">

	<LinearLayout
			android:orientation="horizontal"
		    android:layout_height="47dp" android:layout_width="fill_parent" android:background="@drawable/top">
		    
		<TextView android:layout_width="fill_parent" android:layout_height="42dp" android:text="我们都爱正太君" android:textSize="22dp" android:textColor="@color/Bbai" android:gravity="center" android:id="@+id/top_title" />
		
	</LinearLayout>
	
	
	<LinearLayout
			android:orientation="horizontal"
		    android:layout_height="fill_parent" android:layout_weight="1" android:layout_width="fill_parent" android:layout_marginTop="2dp" android:layout_marginRight="4dp" >
		
		<RelativeLayout android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content" android:background="@drawable/bian" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="4dp" android:paddingBottom="4dp"
		android:layout_marginTop="4dp" android:layout_marginLeft="6dp">
			
			<ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/zhengt_1" android:scaleType="fitXY" />
			
			<TextView android:layout_width="fill_parent" android:layout_height="22dp" android:layout_marginTop="-15dp" android:id="@+id/zhengt_title_1" android:scaleType="fitXY" 
		 android:text="萌正太" android:textColor="@color/Bbai" android:textSize="16dp" android:gravity="center" android:background="@drawable/bantouming"
		 android:layout_alignBottom="@+id/zhengt_1"/>
		
		</RelativeLayout>
		
		<RelativeLayout android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content" android:background="@drawable/bian" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="4dp" android:paddingBottom="4dp"
		android:layout_marginTop="4dp" android:layout_marginLeft="4dp">
			
			<ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/zhengt_2" android:scaleType="fitXY" />
		
			<TextView android:layout_width="fill_parent" android:layout_height="22dp" android:layout_marginTop="-15dp" android:id="@+id/zhengt_title_2" android:scaleType="fitXY" 
		 android:text="酷正太" android:textColor="@color/Bbai"  android:textSize="16dp" android:gravity="center" android:background="@drawable/bantouming"
		android:layout_alignBottom="@+id/zhengt_2"/>
			
		</RelativeLayout>
		
	</LinearLayout>
	
	
	<LinearLayout
			android:orientation="horizontal"
		    android:layout_height="fill_parent" android:layout_weight="1" android:layout_width="fill_parent"  android:layout_marginTop="2dp"  android:layout_marginRight="4dp">
		
		<RelativeLayout android:layout_width="fill_parent" android:layout_weight="1"  android:layout_height="wrap_content" android:background="@drawable/bian" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="4dp" android:paddingBottom="4dp"
		android:layout_marginTop="4dp" android:layout_marginLeft="6dp">
			
			<ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/zhengt_3" android:scaleType="fitXY" />
			
			<TextView android:layout_width="fill_parent" android:layout_height="22dp" android:layout_marginTop="-15dp" android:id="@+id/zhengt_title_3" android:scaleType="fitXY" 
		 android:text="梦幻正太" android:textColor="@color/Bbai" android:textSize="16dp" android:gravity="center" android:background="@drawable/bantouming"
		 android:layout_alignBottom="@+id/zhengt_3"/>
		
		</RelativeLayout>
		
		<RelativeLayout android:layout_width="fill_parent" android:layout_weight="1"  android:layout_height="wrap_content" android:background="@drawable/bian" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="4dp" android:paddingBottom="4dp"
		android:layout_marginTop="4dp" android:layout_marginLeft="4dp">
			
			<ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/zhengt_4" android:scaleType="fitXY" />
		
			<TextView android:layout_width="fill_parent" android:layout_height="22dp" android:layout_marginTop="-15dp" android:id="@+id/zhengt_title_4" android:scaleType="fitXY" 
		 android:text="霓裳之恋" android:textColor="@color/Bbai"  android:textSize="16dp" android:gravity="center" android:background="@drawable/bantouming"
		android:layout_alignBottom="@+id/zhengt_4"/>
			
		</RelativeLayout>
		
	</LinearLayout>
	
	
	<LinearLayout
			android:orientation="horizontal"
		    android:layout_height="fill_parent" android:layout_weight="1" android:layout_width="fill_parent"  android:layout_marginTop="2dp" android:layout_marginBottom="4dp"  android:layout_marginRight="4dp">
		
		<RelativeLayout android:layout_width="fill_parent" android:layout_weight="1"  android:layout_height="wrap_content" android:background="@drawable/bian" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="4dp" android:paddingBottom="4dp"
		android:layout_marginTop="4dp" android:layout_marginLeft="6dp">
			
			<ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/zhengt_5" android:scaleType="fitXY" />
			
			<TextView android:layout_width="fill_parent" android:layout_height="22dp" android:layout_marginTop="-15dp" android:id="@+id/zhengt_title_5" android:scaleType="fitXY" 
		 android:text="梦幻正太" android:textColor="@color/Bbai" android:textSize="16dp" android:gravity="center" android:background="@drawable/bantouming"
		 android:layout_alignBottom="@+id/zhengt_5"/>
		
		</RelativeLayout>
		
		<RelativeLayout android:layout_width="fill_parent" android:layout_weight="1"  android:layout_height="wrap_content" android:background="@drawable/bian" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="4dp" android:paddingBottom="4dp"
		android:layout_marginTop="4dp" android:layout_marginLeft="4dp">
			
			<ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/zhengt_6" android:scaleType="fitXY" />
		
			<TextView android:layout_width="fill_parent" android:layout_height="22dp" android:layout_marginTop="-15dp" android:id="@+id/zhengt_title_6" android:scaleType="fitXY" 
		 android:text="霓裳之恋" android:textColor="@color/Bbai"  android:textSize="16dp" android:gravity="center" android:background="@drawable/bantouming"
		android:layout_alignBottom="@+id/zhengt_6"/>
			
		</RelativeLayout>
		
	</LinearLayout>
	
	
	
	
	
</LinearLayout>