<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:background="@drawable/vlist_bg" android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:background="@android:color/transparent" android:layout_height="140dp">
	
		<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/bian" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="4dp" android:paddingBottom="4dp" 
		android:layout_marginLeft="8dp" android:layout_marginTop="8dp" >
			<ImageView android:id="@+id/img" android:layout_width="120dp" android:background="@android:color/transparent" android:layout_height="120dp" android:scaleType="fitXY" />
		</LinearLayout>
		
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:background="@android:color/transparent" android:layout_height="fill_parent"  android:layout_marginTop="8dp">
			<TextView android:id="@+id/title" android:layout_width="fill_parent" android:layout_height="59dp" android:textColor="#FF555555" android:textSize="16dp" />
			
			<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:background="@android:color/transparent" android:layout_height="28dp" >
				<TextView android:layout_width="wrap_content" android:layout_height="28dp" android:textSize="18dp" android:text=" NO." android:textColor="@color/new_price" />
				<TextView android:id="@+id/price" android:layout_width="fill_parent" android:layout_height="28dp" android:textSize="22dp" android:text="1           $399" android:textColor="@color/new_price" />
			</LinearLayout>
			
			<TextView android:id="@+id/info" android:layout_width="fill_parent" android:layout_height="36dp" android:textSize="20dp" android:textColor="@color/new_price_info" android:text="" android:paddingTop="5dp"  android:background="@drawable/shuo_nimabi"/>
		</LinearLayout>
		
	</LinearLayout> 
	
</LinearLayout> 

